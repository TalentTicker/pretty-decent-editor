{
    "compilerOptions": {
      "target": "ESNext",
      "lib": [
        "DOM",
        "DOM.Iterable",
        "ESNext"
      ],
      "allowJs": false,
      "skipLibCheck": false,
      "esModuleInterop": false,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "ESNext",
      "moduleResolution": "Node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "sourceMap": false,
      "declaration": true,
      "baseUrl": "./src",
      "rootDir": "./src",
      "jsx": "react",
      "typeRoots": [
        "../node_modules/@types",
        "./src/slate.d.ts"
      ]
    }
  }